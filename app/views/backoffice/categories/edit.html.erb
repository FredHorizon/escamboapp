
<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h2> <%= current_admin.email %> </h2>
                <h1 class="page-header">Categorias</h1>

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Editando Categoria
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="col-lg-6">
                            <%= form_for([ :backoffice, @category]) do |f| %> <!-- '([ :backoffice, @category])' dessa forma a rota 'backoffice/categories' é identificada -->
                                <div class="form-group">
                                    <label>Descrição</label>
                                    <%= f.text_field :description, class: "form-control", placeholder: "Ex: Papelaria" %>
                                </div>
                                <button type="submit" class="btn btn-default">Salvar</button>
                            <% end %>
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                <!-- </div> -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->